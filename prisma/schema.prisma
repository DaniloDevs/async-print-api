generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model events {
  id        String  @id @default(cuid())
  title     String
  slug      String  @unique
  active    Boolean
  bannerURL String?
  createdAt DateTime
  startIn   DateTime
  endIn     DateTime
  
  leads leads[]
}

model leads {
  id        String  @id @default(cuid())
  name      String
  cellphone String  @unique
  isValid   Boolean @default(true)
  createdAt DateTime

  events   events @relation(fields: [eventsId], references: [id])
  eventsId String
}
